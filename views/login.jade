extends ./index

block content
    .row
        .col-sm-6.col-md-4.col-md-offset-4
            h1.text-center.login-title Sign in
            .account-wall
                form.form-signin(method='post', action='/login')
                    input.form-control(type='text', placeholder='Username', required='', autofocus='')
                    input.form-control(type='password', placeholder='Password', required='')
                    button.btn.btn-lg.btn-primary.btn-block(type='submit')
                        | Sign in
                    label.checkbox.pull-left
                        input(type='checkbox', value='remember-me')
                        |                     Remember me
                    span.clearfix